{
  "name": "serversguru-deploy",
  "version": "1.1.1",
  "description": "Autonomous VPS deployment using Servers.guru API with SSH provisioning",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./errors": {
      "import": "./dist/errors.js",
      "types": "./dist/errors.d.ts"
    },
    "./logger": {
      "import": "./dist/logger.js",
      "types": "./dist/logger.d.ts"
    },
    "./preflight": {
      "import": "./dist/preflight.js",
      "types": "./dist/preflight.d.ts"
    }
  },
  "bin": {
    "sg-deploy": "bin/sg-deploy"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "husky && npm run build",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "servers.guru",
    "vps",
    "deployment",
    "automation",
    "docker",
    "devops",
    "infrastructure",
    "cloud",
    "hosting",
    "ssl",
    "nginx",
    "ssh",
    "cli"
  ],
  "author": "0xjacq <0xjacq@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xjacq/serversguru-deploy.git"
  },
  "bugs": {
    "url": "https://github.com/0xjacq/serversguru-deploy/issues"
  },
  "homepage": "https://github.com/0xjacq/serversguru-deploy#readme",
  "files": [
    "dist/",
    "bin/",
    "templates/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "commander": "^12.1.0",
    "ssh2": "^1.16.0",
    "ssh2-sftp-client": "^11.0.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.10.5",
    "@types/ssh2": "^1.15.1",
    "@types/ssh2-sftp-client": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
